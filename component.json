{
    "title": "sphere-stock-sync",
    "description": "Syncronizes the inventory items of a retailer SPHERE.IO project to a master SPHERE.IO project",
    "url" : "http://www.commercetools.com",
    "credentials": {
        "fields": {
            "masterProjectKey": {
                "viewClass": "TextFieldView",
                "label": "Master Project Key",
                "required": true,
                "placeholder": "Paste your master project key"
            },
            "masterClientId": {
                "viewClass": "TextFieldView",
                "label": "Master Client Id",
                "required": true,
                "placeholder": "Paste your master client id"
            },
            "masterClientSecret": {
                "viewClass": "TextFieldView",
                "label": "Master Client Secret",
                "required": true,
                "placeholder": "Paste your master client secret"
            },
            "retailerProjectKey": {
                "viewClass": "TextFieldView",
                "label": "Retailer Project Key",
                "required": true,
                "placeholder": "Paste your retailer project key"
            },
            "retailerClientId": {
                "viewClass": "TextFieldView",
                "label": "Retailer Client Id",
                "required": true,
                "placeholder": "Paste your retailer client id"
            },
            "retailerClientSecret": {
                "viewClass": "TextFieldView",
                "label": "Retailer Client Secret",
                "required": true,
                "placeholder": "Paste your retailer client secret"
            }
        }
    },
    "actions": {
        "services": {
            "main": "elasticio.js",
            "title": "Stock Sync",
        }
    }
}